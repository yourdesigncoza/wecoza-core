{
    "name": "wecoza/wecoza-core",
    "description": "Core infrastructure for WeCoza plugins - shared database, models, controllers, and utilities",
    "type": "wordpress-plugin",
    "license": "proprietary",
    "authors": [
        {
            "name": "YourDesign.co.za",
            "email": "info@yourdesign.co.za"
        }
    ],
    "autoload": {
        "psr-4": {
            "WeCoza\\Core\\": "core/",
            "WeCoza\\Learners\\": "src/Learners/",
            "WeCoza\\Classes\\": "src/Classes/",
            "WeCoza\\Events\\": "src/Events/"
        },
        "files": [
            "core/Helpers/functions.php"
        ]
    },
    "require": {
        "php": ">=8.0"
    },
    "config": {
        "optimize-autoloader": true
    }
}
